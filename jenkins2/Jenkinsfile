 stage ('build image') {
 steps {
	echo 'building image'
	script  {
	sh ( script: '''
	    docker images -a
     	    cd docker
     	    docker build -t ${dockerimage} .
	    docker images -a 
	''')
		}
 	 }
 }
 
//stage ('Scan image') {
//  steps {
//	echo 'Scanning the image'
//	sh "trivy image  ${dockerimage}" 
//	 }
//    }

stage ('Update deployment') {
  steps {
	echo "Pushing image to DockerHub"
	  script {
		docker.withRegistry('https://hub.docker.com', DOCKER_CRED)
		  {
		    sh 'docker push ${dockerimage}' 
		  }
		  
	  }
	  
  }
}

	}
}
